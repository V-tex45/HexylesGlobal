# ========================
# BACKEND CONFIGURATION (Python/Flask)
# ========================

# Flask Server
FLASK_APP=api.py
FLASK_ENV=development
FLASK_DEBUG=1
SERVER_PORT=5000

# Database (SQLite by default, replace with PostgreSQL/MySQL if needed)
DATABASE_URL=sqlite:///instance/hexyles.db
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_actual_google_maps_api_key_here

# M-Pesa API (Safaricom Daraja)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://yourdomain.com/mpesa-callback

# Email Service (For Notifications)
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=hexylesglobal@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=no-reply@hexylesglobal.com

# Security
SECRET_KEY=your_flask_secret_key_keep_this_very_secret
JWT_SECRET=your_jwt_signing_key_for_mobile_app

# ========================
# FRONTEND CONFIGURATION (React Native)
# ========================

# API Endpoints
API_BASE_URL=http://localhost:5000/api  # Replace with live URL in production
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Mobile App Settings
APP_NAME=Hexyles Global
APP_VERSION=1.0.0
APP_SCHEME=hexylesglobal

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=your_expo_token

# ========================
# PROJECT-SPECIFIC SETTINGS
# ========================

# Construction Project Defaults
DEFAULT_PROJECT_STATUS=Planning
DEFAULT_PROJECT_PROGRESS=0
MAX_PROJECT_PHOTOS=20

# Payment Settings (Kenya Shillings)
MIN_PAYMENT_AMOUNT=100
MAX_PAYMENT_AMOUNT=1000000
PAYMENT_CURRENCY=KES

# Time Settings (Africa/Nairobi Timezone)
TIMEZONE=Africa/Nairobi
WORKING_HOURS_START=08:00
WORKING_HOURS_END=17:00
